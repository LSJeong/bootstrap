<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.lsj.bootstrap.notice.service.NoticeMapper">
	<select id="noticeSelectList" resultType="co.lsj.bootstrap.notice.service.NoticeVO">
		SELECT * FROM NOTICE
	</select>
	
	<select id="noticeSelect" resultType="co.lsj.bootstrap.notice.service.NoticeVO">
		SELECT * FROM NOTICE WHERE NO = #{no}
	</select>
	
	<select id="noticeSearchList" resultType="co.lsj.bootstrap.notice.service.NoticeVO" parameterType="String">
		SELECT * FROM NOTICE
		WHERE SUBJECT LIKE '%'|| #{searchKey} ||'%'
	</select>
	
	<insert id="noticeInsert" parameterType="co.lsj.bootstrap.notice.service.NoticeVO">
		<selectKey keyProperty="no" order="BEFORE" resultType="int">
			select MAX(no)+1 from notice
		</selectKey>
		INSERT INTO NOTICE VALUES(#{no}, #{id}, #{name}, #{wdate}, #{title}, #{subject}, #{fileName},#{pfileName})
	</insert>
	
	<update id="noticeUpdate" parameterType="co.lsj.bootstrap.notice.service.NoticeVO">
		update notice 
		<set>
			<if test="id != null">ID = #{id}</if>
			<if test="name != null">NAME = #{name}</if>
			<if test="wdate != null">WDATE = #{wdate}</if>
			<if test="title != null">TITLE = #{title}</if>
			<if test="subject != null">SUBJECT = #{subject}</if>
			<if test="filename != null">FILENAME = #{fileName}</if>
			<if test="pfilename != null">PFILENAME = #{pfileName}</if>
		</set>
		where no = #{no}
	</update>
	
	<delete id="noticeDelete" parameterType="co.lsj.bootstrap.notice.service.NoticeVO">
		DELETE FROM NOTICE WHERE NO = #{no}
	</delete>
</mapper>